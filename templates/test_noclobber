# don't set --noclobber on the drive since *all* child partitions would be --noclobber then
# just set it on the partitions we don't want to touch. the drive itself won't be formatted
# as long as there are some --noclobber children
drive --devpath /dev/sdb

    partition --devpath /dev/sdb1 --noclobber       # protective mbr

    partition --devpath /dev/sdb2 --noclobber
        filesystem --fstype fat --mountpoint /boot    # efi boot partition`

    partition --devpath /dev/sdb3 --noclobber       # windows generated partitionr

    partition --devpath /dev/sdb4 --noclobber       # windows

    partition --devpath /dev/sdb5 --noclobber
        filesystem --mountpoint /home/shared 

    # everything here on in is new arch storage
    partition --size ram
        swap

    partition --size max
        encryption
            filesystem --fstype btrfs --mountpoint /
                subvolume --mountpoint /home

